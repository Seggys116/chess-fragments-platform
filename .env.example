# Database
POSTGRES_PASSWORD=your_secure_password_here

# Next.js
NODE_ENV=development
NEXTAUTH_SECRET=generate_a_random_secret_here
NEXTAUTH_URL=http://localhost:3000

# Redis
REDIS_URL=redis://localhost:6379

# Database URL (for Prisma)
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/fragmentarena

# Rate Limiting
UPLOAD_RATE_LIMIT_REQUESTS=1
UPLOAD_RATE_LIMIT_HOURS=1
GLOBAL_RATE_LIMIT_PER_MINUTE=100
IP_RATE_LIMIT_PER_MINUTE=100
IP_RATE_LIMIT_PER_HOUR=3000
IP_RATE_LIMIT_PER_DAY=50000
USER_RATE_LIMIT_PER_MINUTE=200
USER_RATE_LIMIT_PER_HOUR=5000
USER_RATE_LIMIT_PER_DAY=100000

# Agent Limits
MAX_AGENT_SIZE_BYTES=1073741824  # 1GiB
MAX_AGENTS_PER_USER=10

# Match Execution
# AGENT_TIMEOUT_SECONDS controls ALL timeouts in the platform:
# - Agent move execution timeout (match play)
# - Agent validation timeout (code upload)
# - Remote agent communication timeout
# - Local agent server move timeout
AGENT_TIMEOUT_SECONDS=14
AGENT_MEMORY_LIMIT_MB=512

# Authentication
# Leave empty to allow open registration, or set a 6-digit code to require it
SIGNUP_CODE=

# Security Configuration
# IP Blocking
AUTO_BLOCK_ENABLED=true
AUTO_BLOCK_THRESHOLD=10
AUTO_BLOCK_DURATION=3600000
# Comma-separated list of IPs to permanently block
IP_BLOCKLIST=
# Comma-separated list of IPs to never block
IP_ALLOWLIST=

# Logging
LOG_REQUESTS=false
LOG_RATE_LIMITS=true
LOG_AUTH_ATTEMPTS=true

# CORS (production domain)
CORS_PRODUCTION_DOMAIN=https://chesscomp.zaknobleclarke.com
