# Dockerfile for Local Agent WebSocket Server
FROM python:3.12-slim

# Security: Run as non-root user
RUN useradd -m -u 1000 -s /bin/bash wsserver && \
    mkdir -p /app && \
    chown -R wsserver:wsserver /app

WORKDIR /app

# Install dependencies
COPY executor/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir websockets==12.0

# Copy server code
COPY executor/local_agent_server.py .
COPY executor/local_agent_tcp_server.py .

# Switch to non-root user
USER wsserver

# Expose WebSocket port
EXPOSE 8765

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
    CMD python -c "import socket; s = socket.socket(); s.connect(('localhost', 8765)); s.close()" || exit 1

# Run server
CMD ["python", "-u", "local_agent_server.py"]
